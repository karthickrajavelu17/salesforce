<apex:page standardController="Account">

   <apex:form >

      <apex:detail />

      <apex:inputfield value="{!Account.Source__c}">

          <apex:actionSupport event="onchange" reRender="Form" />
     </apex:inputfield>
       <br/>
     <apex:outputpanel id="Form" >
        <apex:inputtext value="{!Account.Source__c}" rendered="{!Account.Source__c == 'Other'}" style="border:none;border-bottom:1px solid black" />
     </apex:outputpanel>
  </apex:form>

</apex:page>